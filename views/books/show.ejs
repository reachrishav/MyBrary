<h2 class="page-header"><%= book.title %></h2>
<img src="<%= book.coverImagePath %>" height="100" width="150">
<div>Author: <%= book.author.name %> </div>
<div>Publish Date: <%= book.publishDate.toDateString() %> </div>
<div>Page Count: <%= book.pageCount %> </div>
<div>Description: <%= book.description %> </div>

<a class="btn btn-primary" href="/books/<%= book.id %>/edit">Edit</a>
<%- include('../partials/deleteForm',{
    url: `/books/${book.id}`
}) %> 
<a class="btn btn-primary" href="/authors/<%= book.author.id %> ">View Author</a>